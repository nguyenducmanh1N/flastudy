<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0E0D3D"
    android:padding="16dp"
    tools:context=".screens.feature.CourseDetailFromClassActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#0E0D3D"
        android:paddingHorizontal="16dp">

        <!-- Back button -->

        <!-- Menu button (3 dots) -->

        <ImageView
            android:id="@+id/btnBack"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Add button -->
        <!--        <ImageView-->
        <!--            android:id="@+id/btnAdd"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:contentDescription="Add"-->
        <!--            android:src="@drawable/baseline_add_24"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:tint="@color/white" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Course Title"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCourseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="01/01/2025 12:00"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/totalVocab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#AAAAAA"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpCards"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />

    <!--    <com.google.android.material.tabs.TabLayout-->
    <!--        android:id="@+id/tabDots"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="35dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        app:tabIndicatorColor="@android:color/transparent"-->
    <!--        app:tabIndicatorHeight="0dp"-->
    <!--        app:tabSelectedTextColor="@android:color/white"-->
    <!--        app:tabTextColor="#555555" />-->

    <LinearLayout
        android:id="@+id/dotsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_button"/>


    <LinearLayout
        android:id="@+id/btnFlashCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_button_ripple"

        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thẻ ghi nhớ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/learn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_button_ripple"

        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_button_ripple"

        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            app:tint="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thẻ ghi nhớ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>






</LinearLayout>
