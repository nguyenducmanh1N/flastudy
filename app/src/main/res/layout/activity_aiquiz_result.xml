<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollStats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0E0D3D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả làm bài"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Tỉ lệ đúng/sai -->
        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Bạn đúng 0/0 (0%)"
            android:textSize="18sp"
            android:paddingBottom="16dp" />

        <!-- Tiêu đề phần từ sai -->
        <TextView
            android:id="@+id/tvWrongHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các từ bạn làm sai:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Container để chèn các card từ sai -->
        <LinearLayout
            android:id="@+id/wrongListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Hai nút bên dưới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnFlashcards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Flashcards" />

            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnCourseDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết Course" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
